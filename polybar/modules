[module/count-updates]
type = custom/script
exec =  checkupdates | wc -l | awk -v o='%{F#7fff00}' -v r='%{F#A60522}' -v q='%{F#000000}' '{if ($0 > 0) print r " " q "Update:" $0; else print o " " q "Update:" $0}'
interval = 100
label = %output%
label-background = ${color.blue}


