[module/mic]
type = custom/script
content = 
exec = ~/myCode/Dotfiles/polybar/script/mic.sh
; exec = pactl set-source-mute "alsa_input.pci-0000_00_1f.3.analog-stereo" 1 || echo " muted "
format-background = ${color.hack} 
content-foreground= ${color.background}
interval = 10
click-right = pactl set-source-mute @DEFAULT_SOURCE@ 1 && notify-send -t 2000 "Microphone muted"
click-left = pactl set-source-mute @DEFAULT_SOURCE@ 0 && notify-send -u critical -t 2000 "Microphone on "

